<div style="margin-left:130px" class="col-lg-9 col-sm-8">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
	<div class="row justify-content-center">
		<div class="col-18 col-md-9 col-lg-12 pb-5">
                    <!--Form with header-->
                        <div class="card border-primary rounded-0" style="box-shadow: 1px 1px 10px #5499C7; background:white">
                            <div class="card-header p-0">
                                <div style="background:#1A5276 ; padding-bottom:18px; padding-top:15px" class="text-center py-2"><p></p>
                                    <h3 style="color:#F5FBFF  "><b>Edit Room Data</b></h3>
                                    @* <p style="color:#D6EAF8" class="m-0">@Employee.Name</p> *@
                                </div>
                            </div>
                            @{var room = ViewBag.Room; }
                            <div class="card-body p-3">
                                <form method="POST" id="form1">
                                <input type="hidden" name="Id" value="@room.Id">
                                <!--Body-->
                                <div class="form-group">
                                    <div class="text-left">
                                        <label for="number">Room Number</label>
                                        <input type="textarea" style="background:#F7F9F9;" class="form-control" id="number" value="@room.Number" name="number" required>
                                    </div>
                                </div>
                                <div class="column">
                            @{  
                                if(room.Class == "Deluxe"){                   
                             <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="cls">
                                        <option value="Deluxe" selected>Deluxe</option>
                                        <option value="Superior">Superior</option>
                                        <option value="Standard">Standard</option>
                                        <option value="Suite">Suite</option>
                                        <option value="Studio">Studio</option>
                                    </select>
                                </div>
                            </div> }
                            else if(room.Class == "Superior"){
                                <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="cls">
                                        <option value="Deluxe">Deluxe</option>
                                        <option value="Superior" selected>Superior</option>
                                        <option value="Standard">Standard</option>
                                        <option value="Suite">Suite</option>
                                        <option value="Studio">Studio</option>
                                    </select>
                                </div>
                            </div>
                            }
                            else if(room.Class == "Standard"){
                            <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="cls">
                                        <option value="Deluxe">Deluxe</option>
                                        <option value="Superior">Superior</option>
                                        <option value="Standard" selected>Standard</option>
                                        <option value="Suite">Suite</option>
                                        <option value="Studio">Studio</option>
                                    </select>
                                </div>
                            </div>
                            }

                            else if(room.Class == "Suite"){
                            <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="cls">
                                        <option value="Deluxe">Deluxe</option>
                                        <option value="Superior">Superior</option>
                                        <option value="Standard">Standard</option>
                                        <option value="Suite" selected>Suite</option>
                                        <option value="Studio">Studio</option>
                                    </select>
                                </div>
                            </div>
                            }
                            else if(room.Class == "Studio"){
                            <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="cls">
                                        <option value="Deluxe">Deluxe</option>
                                        <option value="Superior">Superior</option>
                                        <option value="Standard">Standard</option>
                                        <option value="Suite">Suite</option>
                                        <option value="Studio" selected>Studio</option>
                                    </select>
                                </div>
                            </div>
                            }

                            }   

                            @{
                            if(room.Status == "Available")
                            {
                            <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="status">
                                       <option value="Available" selected>Available</option>
                                        <option value="In Use">In Use</option>
                                        <option value="Cleaning">Cleaning</option>
                                        <option value="Renovation">Renovation</option>
                                    </select>
                                </div>
                            </div>}
                            else if(room.Status == "In Use")
                            {
                            <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="status">
                                       <option value="Available">Available</option>
                                        <option value="In Use"  selected>In Use</option>
                                        <option value="Cleaning">Cleaning</option>
                                        <option value="Renovation">Renovation</option>
                                    </select>
                                </div>
                            </div>}
                            else if(room.Status == "Cleaning")
                            {
                            <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="status">
                                       <option value="Available">Available</option>
                                        <option value="In Use">In Use</option>
                                        <option value="Cleaning"  selected>Cleaning</option>
                                        <option value="Renovation">Renovation</option>
                                    </select>
                                </div>
                            </div>}
                            else if(room.Status == "Renovation")
                            {
                            <div class="form-group">
                                <div class="text-left">
                                    <label for="class">Class</label>
                                    <select class="form-control" id="class" name="status">
                                        <option value="Available">Available</option>
                                        <option value="In Use">In Use</option>
                                        <option value="Cleaning">Cleaning</option>
                                        <option value="Renovation" selected>Renovation</option>
                                    </select>
                                </div>
                            </div>}
                            }


                            @{  var ac = "";
                                var tv = "";
                                var wifi = "";
                                var pool = "";
                                var desk = "";
                                var heater = "";
                                var bathtub = "";
                                var kitchen = "";

                                if(room.Facilities.Contains("AC")){
                                    ac = "checked";
                                }
                                if(room.Facilities.Contains("TV")){
                                    tv = "checked";
                                }
                                if(room.Facilities.Contains("WiFi")){
                                    wifi = "checked";
                                }
                                if(room.Facilities.Contains("Heater")){
                                    heater = "checked";
                                }
                                if(room.Facilities.Contains("Pool")){
                                    pool = "checked";
                                }
                                if(room.Facilities.Contains("Kitchenette")){
                                    kitchen = "checked";
                                }
                                if(room.Facilities.Contains("Bathtub")){
                                    bathtub = "checked";
                                }
                                if(room.Facilities.Contains("Workspace")){
                                    desk = "checked";
                                }

                             <div class="form-group">
                                <label for="0">Facilities</label>
                                <input type="hidden" id="0"><br>
                                <div class="col-lg-12">
                                    <div class="col-lg-6">
                                    <input type="checkbox" id="1" name="fac1" value="AC" @ac>
                                    <label for="1"> AC</label><br>
                                    <input type="checkbox" id="2" name="fac2" value="TV" @tv>
                                    <label for="2"> TV</label><br>
                                    <input type="checkbox" id="3" name="fac3" value="WiFi" @wifi>
                                    <label for="3"> WiFi</label><br>
                                    <input type="checkbox" id="4" name="fac4" value="Heater" @heater>
                                    <label for="4"> Water Heater</label><br>
                                    </div>
                                    <div class="col-lg-6">
                                    <input type="checkbox" id="5" name="fac5" value="Bathtub" @bathtub>
                                    <label for="5"> Bathtub</label><br>
                                    <input type="checkbox" id="6" name="fac6" value="Workspace" @desk>
                                    <label for="6"> Desk/Workspace</label><br>
                                    <input type="checkbox" id="7" name="fac7" value="Kitchenette" @kitchen>
                                    <label for="7"> Kitchenette</label><br>
                                    <input type="checkbox" id="8" name="fac8" value="Pool" @pool>
                                    <label for="8"> Pool</label><br>
                                    </div>
                                </div>
                            </div>
                            
                            <br><br>

                            }

                             <div class="form-group">
                                    <div class="text-left">
                                        <label for="class">Price / Night</label>
                                        <input type="text" class="form-control" name="price" id="desc" value="@room.Price">
                                    </div>
                                </div>                                  
                             <div class="form-group">
                                    <div class="text-left">
                                        <label for="class">Description</label>
                                        <textarea class="form-control" rows="5" name="description" id="desc" >@room.Description</textarea>
                                    </div>
                                </div>                                  
                                <div class="text-center">
                                    <button asp-action="EditRoomData" asp-controller="Manager" class="btn btn-success btn-block rounded-0 py-2">Update</button>
                                </div>
                                </form>
                            </div>
                            <br>

                        </div>
                    <!--Form with header-->


            </div>
	</div>
</div>

</div></div>
